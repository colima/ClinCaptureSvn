<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://${dbHost}:${dbPort}/WHOD-0315</property>
        <property name="hibernate.connection.username">${dbUser}</property>
        <property name="hibernate.connection.password">${dbPass}</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">false</property>

        <mapping class="com.clinovo.model.AtcClassification" />
        <mapping class="com.clinovo.model.CountryCode" />
        <mapping class="com.clinovo.model.Ingredient" />
        <mapping class="com.clinovo.model.MedicalProduct" />
        <mapping class="com.clinovo.model.Substance" />
        <mapping class="com.clinovo.model.Therapgroup" />
    </session-factory>
</hibernate-configuration>