<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="igor" id="2013-04-08-TICKET70-01">
        <comment>Change datatype of date_created/updated from "date" to "timestamp without time zone"</comment>
		<modifyColumn tableName="dataset">
			<column name="date_created" type="timestamp without time zone"/>
		</modifyColumn>
		<modifyColumn tableName="dataset">
			<column name="date_updated" type="timestamp without time zone"/>
		</modifyColumn>
    </changeSet>
</databaseChangeLog>